---
import Layout from "../layouts/Layout.astro";
import ScrollSpyCertificates from "../components/ScrollSpyCertificates.astro";
import { frontendCertificates } from "../content/certificates/frontendCertificates.js";
import { backendCertificates } from "../content/certificates/backendCertificates.js";
import { extraCertificates } from "../content/certificates/extraCertificates.js";
import CertificatesSection from "../components/CertificatesSection.astro";

export const SECTIONS = [
  { id: "#section-1", title: "Presentacion" },
  { id: "#section-2", title: "Proyectos" },
  { id: "#section-3", title: "Sobre Mi" },
];

---

<Layout title="Ellaggon archievements" description="Certificados de estudio">
  <ScrollSpyCertificates />

  <CertificatesSection title="FRONTEND" certificates={frontendCertificates} id="section-1"/>
  <CertificatesSection title="BACKTEND" certificates={backendCertificates} id="section-2"/>
  <CertificatesSection title="COMPLEMENTOS" certificates={extraCertificates} id="section-3"/>
</Layout>