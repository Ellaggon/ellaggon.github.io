---
import GitHubCards from "./icons/GitHubCards.astro";

export interface Props {
  title: string;
  time: string;
  description: string;
  tags: string[];
  img: string;
  url: string;
  repository: string;
}

const { description, time, title, tags, img, url, repository } = Astro.props;
---

<article class="relative mb-10 ">
  <a
    href={url}
    target="_blank"
    class="relative group block bg-black lg:h-96 h-80 rounded-xl"
  >
    <img
      alt={title}
      src={img}
      class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50 rounded-xl"
    />
    <div class="relative h-full w-full p-3 sm:p-6 lg:p-4">
      <!-- title -->
      <p class="text-xl font-bold text-white sm:text-2xl lg:mt-3">{title}</p>
      <!-- description -->
      <div class="absolute bottom-10 mr-4">
        <p
          class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100 text-white text-pretty"
        >
          {description}
        </p>
      </div>
    </div>
  </a>
  <!-- tags -->
  <div class="flex justify-between mt-3 mx-3">
    <div
      class="flex flex-wrap gap-1 text-center text-sm tracking-widest text-gray-300 uppercase"
    >
      {
        tags.map((el) => (
          <p class="bg-opacity-80 bg-blue-950 rounded-lg mt-3 px-2.5 max-h-6 whitespace-nowrap group-hover:opacity-80">
            {el}
          </p>
        ))
      }
    </div>
    <a href={repository} target="_blank">
      <GitHubCards />
    </a>
  </div>
</article>
