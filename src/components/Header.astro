---
import HeaderButton from "./HeaderButton.astro";
import HomeIcon from "./icons/HomeIcon.astro";
import ArchievementsIcon from "./icons/ArchievementsIcon.astro";
import ProjectsIcon from "./icons/ProjectsIcon.astro";
---

<header class="
  flex items-center justify-center text-center 
  sticky top-0 py-5 mx-auto max-w-full lg:px-6 z-10 mb-10">
  <nav class="rounded-2xl bg-black bg-opacity-40 py-1 px-3">

    <a href="/" class="transition">
      <HeaderButton>
        <HomeIcon />
        <p class="text-sm">Inicio</p>
      </HeaderButton>
    </a>
    <a href="/projects">
      <HeaderButton>
        <ProjectsIcon />
        <p class="text-sm">Proyectos</p>
      </HeaderButton>
    </a>
    <a href="/certificates">
      <HeaderButton>
        <ArchievementsIcon />
        <p class="text-sm">Certificados</p>
      </HeaderButton>
    </a>

  </nav>
</header>


